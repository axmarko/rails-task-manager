<h1>My tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li>
    <input type="checkbox" > <%= link_to task.title, task_path(task) %>
    <%= link_to "Delete", delete_task_path(task), method: :delete, data: {:confirm => "Are you sure you want to delete this task?"} %>
  </li>
  <% end %>
</ul>

<%= link_to "Create a new task", tasks_new_path %>
